                        <td>
                            <select>
                                <option>None</option>
                                <option>4PX</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <th>商家區域：</th>
                        <td>
                            <select>
                                <option>Inactive</option>
                                <option>Active</option>
                            </select>
                        </td>
                        <th>Display FFA Logo：</th>
                        <td>
                            <select disabled>
                                <option>Not support yet</option>
                            </select>
                        </td>
                        <th></th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>電子郵件(Email)語系：</th>
                        <td>
                            <select>
                                <option>English</option>
                            </select>
                        </td>
                        <th>Registration Language：</th>
                        <td>
                            <select>
                                <option>English</option>
                            </select>
                        </td>
                        <th></th>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Invite Seller for：</th>
                        <td>
                            <label>
                                <input type="radio" name="InviteSellerType" />
