@{
    ViewBag.Title = "商家維護與管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Themes/2013/stylesheets/allModel.css")
}

<div class="rightBox">
    <div class="titleBar">
        <div class="title">Seller Invitation</div>
        <div class="path">
            <a href="/">首頁</a>><a href="#">商家維護與管理</a>><span>Seller Invitation</span>
