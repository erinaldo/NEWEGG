<style>
    table {border-collapse: collapse;}
    table.OrderTable td {padding: 0 5px;border:1px solid #000;}
    table.OrderTable th {text-align: left;padding: 0 5px;border:1px solid #000;}
</style>
<html>
    <body>
        <table width="795" border="0" cellspacing="0" cellpadding="0" align="center">
            <tr>
                <td>
                    <img src="@Model.DIC["Header"]" width="795" height="68" />
                </td>
            </tr>
            <tr>
                <td>
                    <br />
                    <table width="100%" border="1" cellspacing="0" cellpadding="0" class="OrderTable">
                        <tr>
                            <th height="27" colspan="2">訂購資訊</th>
                        </tr>
                        <tr>
                            <td width="160" height="27">訂購單編號：</td>
                            <td width="629" height="27">@Model.DIC["SalesOrderCodes"]</td>
                        </tr>
                        <tr>
                            <td width="160" height="27">訂購人：</td>
                            <td height="27">@Model.SalesOrderList[0].Name </td>
                        </tr>
                        <tr>
                            <td width="160" height="27">訂購人電話：</td>
                            <td height="27">@Model.SalesOrderList[0].Mobile </td>
                        </tr>
                        <tr>
                            <th height="27" colspan="2">訂單取消資訊</th>
                        </tr>
                        <tr>
                            <td width="160" height="27">訂單取消日期：</td>
                            <td height="27">@Model.DIC["CancelDate"] </td>
                        </tr>
                        <tr>
                            <td width="160" height="27">訂單取消原因：</td>
                            <td height="27">@Model.DIC["ReasonDropList"] </td>
                        </tr>
                        <tr>
                            <td width="160" height="27">訂單取消原因描述：</td>
                            <td height="27">@Model.DIC["Reasontext"] </td>
                        </tr>
                        <tr>
                            <td width="160" height="27">付款方式：</td>
                            <td height="27">@Model.DIC["Paytype"] </td>
                        </tr>
                        @if (Model.SalesOrderCancelList[0].BankID != "" && Model.SalesOrderCancelList[0].BankID != null)
                        {
                        <tr>
                            <th height="27" colspan="2">退款資訊</th>
                        </tr>
                        <tr>
                            <td width="160" height="27">退款銀行名稱：</td>
                            <td height="27">@Model.SalesOrderCancelList[0].BankID </td>
                        </tr>
                        <tr>
                            <td width="160" height="27">退款銀行分行：</td>
                            <td height="27">@Model.SalesOrderCancelList[0].BankBranch </td>
                        </tr>
                        <tr>
                            <td width="160" height="27">退款銀行帳號：</td>
                            <td height="27">@Model.SalesOrderCancelList[0].AccountNO </td>
                        </tr>
                        <tr>
                            <td width="160" height="27">戶名：</td>
                            <td>@Model.SalesOrderList[0].Name </td>
                        </tr>
                        }                               
                    </table>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <br />
                    <img src="@Model.DIC["Fooer"]" width="795" height="40" />
                </td>
            </tr>
        </table>
    </body>
</html>