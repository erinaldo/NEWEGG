@model List<TWNewEgg.Models.ViewModels.Advertising.AdvEventDisplay>

@{    
    string strImageServer = "";
    strImageServer = System.Configuration.ConfigurationManager.AppSettings.Get("ECWebHttpsImgDomain") ?? string.Empty;
    if (Model != null)
    {
        for (int i = 0; i < Model.Count; i++) { 
            if(!String.IsNullOrEmpty(Model[i].LinkUrl))
            {
                @Html.Raw(String.Format("<a href='{0}' target='_blank'><img src='{1}'></a>", Model[i].LinkUrl, strImageServer + Model[i].ImgUrl))
        }
            else
            {
                @Html.Raw(String.Format("<img src='{0}'></a>", strImageServer + Model[i].ImgUrl))
            }
        }
    }
}