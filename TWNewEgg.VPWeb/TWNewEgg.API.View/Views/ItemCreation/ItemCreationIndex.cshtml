<input type="hidden" id="imgNumber" value ="0" />
<script type="text/javascript">
    $(function () {
        @*商品包裝*@
        if ("@Model.Item.ItemPackage".toLowerCase() == "1") {
            $("#OEM_").prop("checked", true);
        }
        else {
            $("#Retail_").prop("checked", true);
        }
        @*窒息危險性*@
        if ("@Model.Product.IsChokingDanger".toLowerCase() == "Y") {
            $("#ChokingDanger_").prop("checked", true);
        }
        else {
            $("#n_ChokingDanger_").prop("checked", true);
        }
        @*18歲以上驗證*@
        if ("@Model.Product.Is18".toLowerCase() == "Y") {
            $("#UnderAge_").prop("checked", true);
        }
        else {
            $("#n_UnderAge_").prop("checked", true);
        }
        @*遞送危險物料*@
        if ("@Model.Product.IsShipDanger".toLowerCase() == "Y") {
            $("#Danger_").prop("checked", true);
        }
        else {
            $("#n_Danger_").prop("checked", true);
        }
        @*遞送方式*@
        if ("@Model.Item.ShipType".toLowerCase() == "N") {
            $("#ShipWay_Newegg_").prop("checked", true);
        }
        else {
            $("#ShipWay_Vendor_").prop("checked", true);
        }

        GrossProfitCalculate();

        $("#PriceCash").change(function () {
            GrossProfitCalculate();
        });

        $("#Cost").change(function () {
            GrossProfitCalculate();
        });
    });

    function setRadioChoose(id, value) {
        $("#" + id).val(value);
    }

    function startChange() {
        var endPicker = $("#DateEnd").data("kendoDatePicker");
        var DateStart = this.value();
        if (DateStart) {
            var newDateEnd = new Date(DateStart);
            newDateEnd.setDate(newDateEnd.getDate() + 1);
            endPicker.min(newDateEnd);
        }
    }

    function endChange() {
        var startPicker = $("#DateStart").data("kendoDatePicker");
        var DateEnd = this.value();

        if (DateEnd) {
            var newDateStart = new Date(DateEnd);
            newDateStart.setDate(newDateStart.getDate() - 1);
            startPicker.max(newDateStart);
        }
    }

    function onUpload(e)
    {
        $("#Save").attr("disabled", true);
        $("#Pending").attr("disabled", true);
    }
    
    function Upload_Result(result) {
        var htmlres = "";
        htmlres = $(".imgDivdisabled").html();
        var len = $(".imgDiv").length;
        htmlres = htmlres.replace("src=\"\"", "src=\"" + result.response.img + "?" + getDateNow() + "\"");
        htmlres = htmlres.replace(/_spec_/g, len + 1);
        $("#ItemImgTable").append("<div class=\"imgDiv\" style=\"min-width:150px; width:13.5%;\">" + htmlres + "</div>");

        var imgCount = 0;
        $("#ItemImgTable img").each(function (e) {
            getSrc = $(this).attr("src");
            if (getSrc.length > 0) {              
                imgCount++;
            }

            if ($("#imgNumber").val() == imgCount)
            {
                $("#Save").attr("disabled", false);
                $("#Pending").attr("disabled", false);
            }           
        });
    }

    function getDateNow() {
        var dt = new Date();
        return dt.getTime();
    }

    function onSelect(e) {
        if (e.files.length > 7) {
            //開啟window 
            $("#ManMade_Alert_Message").html("上傳圖片數量上限為7張!");
            ManMade_Alert_Message_Window.data("kendoWindow").center().open();

            e.preventDefault();
            return false;
        }
        else {
            var imgCount = 0;
            $("#ItemImgTable img").each(function (e) {
                getSrc = $(this).attr("src");
                if (getSrc.length > 0) {
                    imgCount++;
                }               
            });           
            if (imgCount + e.files.length > 7) {
                //開啟window 
                $("#ManMade_Alert_Message").html("上傳圖片數量上限為7張!");
                ManMade_Alert_Message_Window.data("kendoWindow").center().open();
                e.preventDefault();
                return false;
            }
            $("#imgNumber").val(imgCount + e.files.length);
        }

        $("strong[class='k-upload-status k-upload-status-total']").remove();
        $("ul[class='k-upload-files k-reset']").remove();
        var ext = e.files[0].extension.toLowerCase();
        if ($.inArray(ext, ['.png', '.jpg']) == -1) {
            $("#ManMade_Alert_Message").html("請選擇 .png .jpg 圖檔");
            ManMade_Alert_Message_Window.data("kendoWindow").center().open();
            e.preventDefault();
            return false;
        }
        return true;
    }
    
    function onAdditionlData() {
        return {
            text: $("#ManufactureID").data("kendoDropDownList").filterInput.val()
        };
    }
    function OnSelectManufactor(e) {
       
        var dataItem = this.dataItem(e.item);
        
        $("#ManufactureID").val(dataItem.SN);
        
    }
</script>
