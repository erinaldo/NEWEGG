    var updateQueryStringParameter = function (uri, key, value) {
        var re = new RegExp("([?&])" + key + "=.*?(&|$)", "i");
        var separator = uri.indexOf('?') !== -1 ? "&" : "?";
        if (uri.match(re)) {
            return uri.replace(re, '$1' + key + "=" + value + '$2');
        }
        else {
            return uri + separator + key + "=" + value;
        }
    };
    var reloadPage = function () {
        if (location.href.indexOf('dig=') > -1) {
            location.href = updateQueryStringParameter(location.href, 'dig', (parseInt(Math.random() * 1000000)));
        }
        else {
            location.href = location.href + (location.href.indexOf('?') > -1 ? '&' : '?') + 'dig=' + (parseInt(Math.random() * 1000000));
        }
    };
