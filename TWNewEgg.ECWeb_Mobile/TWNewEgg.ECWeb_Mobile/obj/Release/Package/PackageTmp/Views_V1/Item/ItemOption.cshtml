@{
    ViewBag.Title = "ItemOption";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styleSheets {
    @Styles.Render("~/Themes/css/bootstrap.css")
    @Styles.Render("~/Themes/css/mStyle.css")
    @Styles.Render("~/Themes/css/font-awesome/css/font-awesome.css")
    @Styles.Render("~/Themes/css/owl.carousel.css")
    @Styles.Render("~/Themes/css/owl.theme.css")
    @Styles.Render("~/Themes/css/royal_tab.css")
}

<div class="wrapper">
<div class="main">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                	<h3>顏色</h3>
                    <button type="button" class="btn btn-outline orangebg2 btn-lg">亮麗紅</button>
                    <button type="button" class="btn btn-outline orangebg2 btn-lg">粉嫩藍</button>
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12">
                	<h3>尺寸</h3>
                    <button type="button" class="btn btn-outline orangebg2 btn-lg">XS</button>
                    <button type="button" class="btn btn-outline orangebg2 btn-lg">S</button>
                    <button type="button" class="btn btn-outline orangebg2 btn-lg">M</button>
                    <button type="button" class="btn btn-outline orangebg2 btn-lg">L</button>
                    <button type="button" class="btn btn-outline orangebg2 btn-lg">XL</button>
                    <button type="button" class="btn btn-outline orangebg2 btn-lg">XXL</button>
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12">
                	<h3>數量</h3>
                    <select class="form-control-xs">
                        <option>100</option>
                        <option>200</option>
                    </select>
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12">
                	<h3>配送方式</h3>
                    <p>宅配 / 超商取貨 / 48小時到貨本商品預計到貨時間7日</p>
                </div>
            </div>
            <div class="row show-grid">
                <div class="col-xs-12">
                    <ul class="list-unstyled square">
                        <li>美感質佳亮色防刮全皮還可以打很多字很多字</li>
                        <li>背面設一小開口袋便利擺放常用小物</li>
                        <li>半圓造型佳好搭配/可肩背可斜背</li>
                    </ul>
                <hr>
                </div>
            </div>
            <br>
            <br>
            <div class="row">
                <div class="col-xs-6">
                    <button type="button" class="btn btn-lg btn-block bluebg whitetxt">加入追蹤清單</button>
                </div>
                <div class="col-xs-6">
                    <button type="button" class="btn btn-lg btn-block orangebg2 whitetxt">加入購物車</button>
                </div>
            </div>
        </div>
</div><!-- /.main -->
</div><!-- /.wrapper -->

@section scripts{
<script src="/Scripts/jquery.js"></script>
<script src="/Scripts/bootstrap.js"></script>
<script src="/Scripts/jquery.freetile.js"></script>
<script src="/Scripts/init.js"></script>
<script src="/Scripts/owl.carousel.js"></script>
<script src="/Scripts/royal_tab.js"></script>
<script>
    $(document).ready(function () {
        $("#owl-demo").owlCarousel({

            navigation: true,
            slideSpeed: 300,
            paginationSpeed: 400,
            singleItem: true

            // "singleItem:true" is a shortcut for:
            // items : 1, 
            // itemsDesktop : false,
            // itemsDesktopSmall : false,
            // itemsTablet: false,
            // itemsMobile : false

        });
    });
</script>
}