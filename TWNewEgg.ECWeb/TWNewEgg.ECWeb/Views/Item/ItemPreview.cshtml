    /* ------ 數值千分位 ------ */
    function Commafy(num)
    {
        num = num + "";
        var re = /(-?\d+)(\d{3})/
        while (re.test(num))
        {
            num = num.replace(re, "$1,$2")
        }
        return num;
    }

