    var Fooer = ViewBag.NewLinkTitle + "/Themes/2013/img/footer.png";
    string Maildate = " " + DateTime.Now.ToShortDateString() + " ";
}
<html>
    <body>
        <table width="795" border="0" align="center">
            <tr>
                <td>
                    <div>
                        <img src="@Header" width="795" height="68" />
                    </div>
                    <div>
                        <br />
                        @ViewBag.OrderName @ViewBag.appellation，您好：
                        <br/><br/>
                        您的訂單: @ViewBag.LBOList 已於 @Maildate 訂購成功，<br />
