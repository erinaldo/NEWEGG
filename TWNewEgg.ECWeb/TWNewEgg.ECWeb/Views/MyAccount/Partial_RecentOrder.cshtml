@using TWNewEgg.DB.TWSQLDB.Models
@using TWNewEgg.Website.ECWeb.Models
@using System.Globalization
@{
    @model TWNewEgg.Models.ViewModels.MyAccount.OrderHistory
    }

<!--<div class="clear"></div>-->
