<script>
$(function () {
    if (typeof (netwActivityPage) == 'function') {
        netwActivityPage();
    } else {
        $('body').netwActivityPage('dispose');
    }

    $("a.links").each(function(){
      $(this).click(function(){
        var $target = $(this).attr("class").split(" ").pop().split("link").pop();
        smoothScroll($target);
      });
    });


    function smoothScroll(obj) {
      var $body = (window.opera) ? (document.compatMode == "CSS1Compat" ? $('html') : $('body')) : $('html,body');

      $body.animate({
        scrollTop: $('.mainProds'+obj).offset().top
      }, 1500);
      return false;
    }

    $("body").prepend("<div class='eventMask'></div><div class='eventContent'><div class='event_main'></div><a class='eventClose' href='javascript:void(0);'>close</a></div>");
    $(".eventMask, .eventContent, .eventNotice").hide();

    $(".eventlink").each(function(){
        $(this).click(function(){
            var _context = $(this).siblings(".eventNotice").html();
            $(".event_main").html(_context);
            $(".eventMask, .eventContent").fadeIn();
        });
    });

    $(".eventClose, .eventMask").click(function(){
        $(".eventMask, .eventContent").fadeOut(function(){
            $(".event_main").html(" ");
        });
    });
});
</script>
